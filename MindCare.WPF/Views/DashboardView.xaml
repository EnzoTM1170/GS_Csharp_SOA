                        </StackPanel>
                    </Border>

                    <!-- Active Employees -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="5" 
                            BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="âœ… FuncionÃ¡rios Ativos" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
                            <TextBlock x:Name="ActiveEmployeesText" Text="0" FontSize="32" FontWeight="Bold" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                    <!-- High Risk -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Margin="5" 
                            BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
