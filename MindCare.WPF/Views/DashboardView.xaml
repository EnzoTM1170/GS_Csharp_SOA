                            <TextBlock x:Name="HighRiskText" Text="0" FontSize="32" FontWeight="Bold" Foreground="Orange"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Alerts -->
                    <Border Grid.Column="3" Background="White" CornerRadius="10" Padding="20" Margin="5" 
                            BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸš¨ Alertas Ativos" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
                            <TextBlock x:Name="ActiveAlertsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="Red"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Highlight Employee -->
                <Border x:Name="HighlightCard" Margin="0,20,0,0" Background="White" CornerRadius="10" Padding="20"
                        BorderBrush="#DDD" BorderThickness="1" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ”¥ FuncionÃ¡rio em destaque (alto estresse)" FontSize="18" FontWeight="Bold"
                                   Foreground="#8B0000" Margin="0,0,0,10"/>
                        <TextBlock x:Name="HighlightNameText" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock x:Name="HighlightRoleText" FontSize="16" Foreground="#666" Margin="0,0,0,10"/>

                        <Grid Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="NÃ­vel de Estresse" FontSize="14" Foreground="#666"/>
                                <TextBlock x:Name="HighlightStressText" FontSize="26" FontWeight="Bold" Foreground="#C0392B"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Sono (Ãºltima noite)" FontSize="14" Foreground="#666"/>
                                <TextBlock x:Name="HighlightSleepText" FontSize="26" FontWeight="Bold" Foreground="#2980B9"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Alerta recente" FontSize="14" Foreground="#666"/>
                                <Border CornerRadius="5" Padding="8" Margin="0,5,0,0" Background="#FDEDEC" BorderBrush="#F5B7B1" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock x:Name="HighlightSeverityText" FontSize="14" FontWeight="Bold" Foreground="#C0392B"/>
                                        <TextBlock x:Name="HighlightMessageText" TextWrapping="Wrap" Foreground="#7F8C8D"/>
                                        <TextBlock x:Name="HighlightTimeText" FontSize="12" Foreground="#999" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border x:Name="NoHighlightCard" Margin="0,20,0,0" Background="White" CornerRadius="10" Padding="20"
                        BorderBrush="#DDD" BorderThickness="1" Visibility="Collapsed">
                    <TextBlock Text="Nenhum funcionÃ¡rio crÃ­tico no momento ðŸ‘"
                               FontSize="16" FontWeight="Bold" Foreground="#27AE60"/>
                </Border>

                <!-- Averages -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Average Stress -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="5" 
                            BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‰ NÃ­vel MÃ©dio de Estresse" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
                            <TextBlock x:Name="AvgStressText" Text="0.0" FontSize="32" FontWeight="Bold" Foreground="#8B0000"/>
                            <TextBlock Text="(0-5 escala)" FontSize="12" Foreground="#999" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Sleep -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="5" 
                            BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ˜´ Qualidade MÃ©dia do Sono" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
                            <TextBlock x:Name="AvgSleepText" Text="0.0" FontSize="32" FontWeight="Bold" Foreground="Blue"/>
                            <TextBlock Text="(7-10 escala)" FontSize="12" Foreground="#999" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Alerts -->
                <Border Margin="0,20,0,0" Background="White" CornerRadius="10" Padding="20" 
                        BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸš¨ Alertas Recentes" FontSize="18" FontWeight="Bold" 
                                   Foreground="#8B0000" Margin="0,0,0,15"/>
                        <DataGrid x:Name="AlertsDataGrid" AutoGenerateColumns="False" 
                                  IsReadOnly="True" HeadersVisibility="Column" GridLinesVisibility="None"
                                  RowBackground="White" AlternatingRowBackground="#F9F9F9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="FuncionÃ¡rio" Binding="{Binding EmployeeName}" Width="*"/>
                                <DataGridTextColumn Header="Severidade" Binding="{Binding Severity}" Width="100"/>
                                <DataGridTextColumn Header="Mensagem" Binding="{Binding Message}" Width="2*"/>
                                <DataGridTextColumn Header="Data" Binding="{Binding TriggeredAt, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                                <DataGridTemplateColumn Header="AÃ§Ã£o" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Reconhecer" Click="AcknowledgeButton_Click" 
                                                    Tag="{Binding Id}" Background="#8B0000" 
                                                    Foreground="White" BorderThickness="0" Padding="10,5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Refresh Button -->
                <Button Content="ðŸ”„ Atualizar" Click="RefreshButton_Click" 
                        HorizontalAlignment="Right" Margin="0,20,0,0" 
                        Background="#8B0000" Foreground="White" 
                        BorderThickness="0" Padding="20,10" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

